{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}